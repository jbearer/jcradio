                     "</div>" +
                  "</div>" +
                "</div>";

         $('body').prepend($content);

         // Add Song To Queue
      $('.doAction').click(function () {

        window.open("https://www.google.com/", "_blank"); //Add song to Spotify Queue

        $(this).parents('.dialog-ovelay').fadeOut(500, function () {
          $(this).remove();
        });
      });

      // Close Dialog Box
$('.cancelAction, .fa-close').click(function () {
        $(this).parents('.dialog-ovelay').fadeOut(500, function () {
          $(this).remove();
        });
      });
      
   }


</script>